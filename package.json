{
  "name": "ecommerce",
  "version": "1.3.0",
  "description": "Esta es la api para un ecommerce",
  "main": "index.js",
  "scripts": {
    "alterdb": "ts-node -r dotenv/config ./src/infrastructure/orm/sequelize/alterdb.ts dotenv_config_path=.env",
    "dev": "nodemon -r dotenv/config ./src/infrastructure/server/index.ts dotenv_config_path=.env",
    "build": "swc src -d dist",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prepare": "husky",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "release": "standard-version && git push --follow-tags",
    "commit": "cz"
  },
  "author": "Ulises Vargas",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "colors": "^1.4.0",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "jose": "^5.2.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@commitlint/prompt-cli": "^18.6.1",
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.2.2",
    "@swc/core": "^1.3.105",
    "@swc/jest": "^0.2.31",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "conventional-changelog": "^5.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "cz-emoji": "1.3.2-canary.2",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.3",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "config-cz": {
    "path": "./node_modules/cz-customizable"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit": "npm run release"
    }
  }
}
